extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  a(href='/my-questions') My Questions
  a(href='/my-answers') My Answers

  h1= title
  if myQuestions && myQuestions.length > 0
    each question in myQuestions
      div
        div= question.User.user_name
        div= question.title
        div
          if question.Answers && question.Answers.length > 0
            each answer in question.Answers
              div= answer.User.user_name
              div= answer.content
        div= 'placeholder for upvote button'
        div= '*************************'
